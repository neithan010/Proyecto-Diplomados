		  p.NACIONALIDAD,
		  UCASE(p.DIREC_PARTICULAR) direccion,
		  p.numero,
		  p.depto_of_par,
		  UCASE(ifnull(c.nombre,'')) comuna,
		  
		  UCASE(p.CARRERA_PRO) CARRERA_PRO,
		  UCASE(p.TituloProfesional) TituloProfesional,
